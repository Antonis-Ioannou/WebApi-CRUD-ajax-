@model Project.Entities.Product

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this product?</h3>
<div>
    <hr />
    <div class="dl-horizontal">
        <b>Product: </b> @Model.Name
        <br />
        <b>Price: </b> @Model.Price
    </div>
    <br />
        <div class="form-actions no-color">
            <input id="dltBtn" type="submit" value="Delete" class="btn btn-default" />
        </div>
        <br />
        <a href="/Products/Index">Back to products list</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>

        $("#dltBtn").click(function (e) {
            let id = "@Model.ProductId"

            var settings = {
                "url": "https://localhost:44305/api/Products/" + id,
                "method": "DELETE",
                "timeout": 0,
            };

            $.ajax(settings).done(function (response) {
                alert("@Model.Name deleted!");
            });

        })

    </script>

}